<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoDAM.View.StationDetailedView"
             Title="Vista detallada estación Detallada"
             BackgroundColor="DarkSlateGray">
    
    <ContentPage.Content>
        <StackLayout Padding="40">


            <Frame OutlineColor="Black" WidthRequest="150" HeightRequest="150" BackgroundColor="Azure"  >
                <Image Source="station.jpg"  Aspect="AspectFill" />
            </Frame>


            <Frame CornerRadius="10" Margin="0,0,0,4"  VerticalOptions="Center" Padding="0" BackgroundColor="IndianRed" HorizontalOptions="Center">
                <Label Text="{Binding Number}" FontSize="Medium" FontAttributes="Bold"  HorizontalOptions="CenterAndExpand" Margin="5,5,5,5" />
            </Frame>

            <AbsoluteLayout>
                <Label Text="Nombre:" TextColor="IndianRed" FontSize="Medium" HorizontalOptions="Start" FontAttributes="Bold"/>
                <Label Text="{Binding Name}" TextColor="White"  FontSize="Medium" FontAttributes="Bold" Margin="60,0,0,0"/>
            </AbsoluteLayout>

            <AbsoluteLayout>
                <Label Text="Dirección:" TextColor="IndianRed" FontSize="Medium" HorizontalOptions="Start" FontAttributes="Bold" />
                <Label Text="{Binding Address}"  TextColor="White"  FontSize="Medium" FontAttributes="Bold"  Margin="80,0,0,0" /> 
            </AbsoluteLayout>

            <AbsoluteLayout HorizontalOptions="Center" Margin="0,25,0,0">
                <Image Source="mainPage.png"   WidthRequest="120"/>
                <Image Source="bikeparking.png" WidthRequest="120" HeightRequest="80" Margin="120,0,0,0"/>
             </AbsoluteLayout>

            <AbsoluteLayout HorizontalOptions="Center" Margin="0,0,0,0">
                <Label Text="{Binding Available}" TextColor="IndianRed" FontSize="Large" HorizontalOptions="Center"  FontAttributes="Bold" Margin="-10,0,0,0" />
                <Label Text="{Binding Free}" FontSize="Large" TextColor="IndianRed" FontAttributes="Bold"  Margin="120,0,0,0" />
            </AbsoluteLayout>
            <AbsoluteLayout HorizontalOptions="Center" Margin="0,0,0,0">
                <Label Text="Bicis disponibles" TextColor="IndianRed" FontSize="Medium"  FontAttributes="Bold" Margin="-15,0,20,0" />
                <Label Text="Huecos libres" FontSize="Medium" TextColor="IndianRed"  FontAttributes="Bold"  Margin="120,0,0,0" />
            </AbsoluteLayout>



            <Button  Text="Navegar a parada" TextColor="IndianRed" BackgroundColor="Azure" Margin="0,50,0,0"/>

        </StackLayout>


    </ContentPage.Content>



</ContentPage>